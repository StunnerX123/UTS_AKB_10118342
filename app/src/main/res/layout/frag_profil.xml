<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".nav.FragProfil"
    android:layout_margin="10dp">

    <ImageView
        android:id="@+id/iv_image"
        android:layout_above="@id/tv_nim"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_centerInParent="true"
        android:backgroundTint="#FFFFFF"
        android:scaleType="centerCrop"
        android:src="@drawable/user"/>
    <TextView
        android:id="@+id/tv_nim"
        android:layout_above="@id/tv_nama"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="10118342"
        android:textSize="18sp"/>
    <TextView
        android:id="@+id/tv_nama"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Muhammad Abdurrohman"
        android:textSize="18sp"/>
    <TextView
        android:id="@+id/txt_kelas"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_nama"
        android:text="IF8"
        android:textSize="20sp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:textAlignment="center"
        android:layout_below="@id/txt_kelas"
        android:text="abdurrohman.10118342@mahasiswa.unikom.ac.id"
        android:textSize="20sp"/>
</RelativeLayout>